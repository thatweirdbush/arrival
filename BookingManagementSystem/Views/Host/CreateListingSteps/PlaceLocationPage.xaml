<Page
    x:Class="BookingManagementSystem.Views.Host.CreateListingSteps.PlaceLocationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helper="using:BookingManagementSystem.Helpers"
    xmlns:models="using:BookingManagementSystem.Core.Models"
    xmlns:vm="using:BookingManagementSystem.ViewModels"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    xmlns:triggers="using:CommunityToolkit.WinUI.UI.Triggers"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled"
    CacheMode="BitmapCache">

    <ScrollView>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="TitleTextBoxState">
                <VisualState x:Name="TitleLengthGreaterThanMaxValue">
                    <VisualState.StateTriggers>
                        <triggers:CompareStateTrigger Comparison="GreaterThan" To="250" Value="{x:Bind ViewModel.CurrentLocation.Length, Mode=OneWay}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="LocationTextBox.BorderBrush" Value="Red" />
                        <Setter Target="LocationInputError.Visibility" Value="Visible" />
                        <Setter Target="LocationErrorText.Text" Value="The maximum number of characters allowed is 250." />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid x:Name="ContentArea" VerticalAlignment="Center" MaxWidth="640" Margin="28 0 28 40">
            <Grid RowSpacing="32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel x:Name="TitleHeaderPanel" MaxWidth="640" Spacing="8" HorizontalAlignment="Stretch">
                    <TextBlock Text="Where's your place located?" Style="{ThemeResource TitleTextBlockStyle}"/>
                    <TextBlock Text="Your address is only shared with guests after they’ve made a reservation." 
                               Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="DimGray" FontWeight="Normal"/>
                </StackPanel>
                <Grid Grid.Row="1" CornerRadius="12">
                    <WebView2 x:Name="MapWebView2" Height="480" Source="https://www.google.com/maps" />
                    <Image Height="50" Source="/Assets/common-icons/pinned-location.png"/>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel x:Name="DescriptionHeaderPanel" MaxWidth="640" Spacing="8" Margin="0 0 0 32" HorizontalAlignment="Stretch">
                        <TextBlock Text="Confirm your address" Style="{ThemeResource TitleTextBlockStyle}"/>
                        <TextBlock Text="It would be helpful if the address is more detailed." 
                                   Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="DimGray" FontWeight="Normal"/>
                    </StackPanel>
                    <StackPanel x:Name="DescriptionBody" Grid.Row="1" Spacing="12">
                        <TextBox x:Name="LocationTextBox" FontSize="20" Padding="18" CornerRadius="8" Height="100" TextWrapping="Wrap" 
                                 Text="{x:Bind ViewModel.CurrentLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="LocationTextBox_TextChanged"
                                 BorderBrush="{ThemeResource AcrylicInAppFillColorDefaultInverseBrush}"/>
                        <Grid>
                            <TextBlock Style="{ThemeResource BaseTextBlockStyle}" Foreground="DimGray" HorizontalAlignment="Left">
                                <Run Text="{x:Bind ViewModel.CurrentLocation.Length, Mode=OneWay}"/>/250
                            </TextBlock>
                            <StackPanel x:Name="LocationInputError" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" Visibility="Collapsed">
                                <InfoBadge Style="{ThemeResource CriticalIconInfoBadgeStyle}"/>
                                <TextBlock x:Name="LocationErrorText" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </ScrollView>
</Page>
