<Page
    x:Class="BookingManagementSystem.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:BookingManagementSystem.Helpers"
    xmlns:behaviors="using:BookingManagementSystem.Behaviors"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    Loaded="OnLoaded">

    <Grid>
        <Grid x:Name="AppTitleBar"
              Canvas.ZIndex="1"
              Height="{Binding ElementName=NavigationViewControl, Path=CompactPaneLength}"
              IsHitTestVisible="True"
              VerticalAlignment="Top">
            <Image Source="/Assets/three-body-a.ico"
                   HorizontalAlignment="Left"
                   Width="16"
                   Height="16" />
            <TextBlock x:Name="AppTitleBarText"
                       VerticalAlignment="Center"
                       TextWrapping="NoWrap"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Margin="28,0,0,0"/>
            <Button x:Name="btnUser" Background="Transparent" BorderThickness="0" Margin="0 0 140 0" HorizontalAlignment="Right" HorizontalContentAlignment="Left">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <PersonPicture DisplayName="{x:Bind username, Mode=OneWay}" Width="26" Height="26"/>
                    <TextBlock x:Name="txtUsername" Text="Sign In" VerticalAlignment="Center" FontSize="14" Margin="10 0"/>
                </StackPanel>
                <Button.Flyout>
                    <MenuFlyout x:Name="UserFlyout" Placement="Bottom">
                        <MenuFlyoutItem x:Name="HostMenuItem" Text="Host Dashboard" Icon="Home" Click="UserMenuFlyoutItem_Click" Tag="host" Width="180" Height="40"/>
                        <MenuFlyoutItem x:Name="SignInMenuItem" Text="Sign in" Icon="Forward" Click="UserMenuFlyoutItem_Click" Tag="signin" Width="180" Height="40"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem x:Name="SettingMenuItem" Text="Setting" Icon="Setting" Click="UserMenuFlyoutItem_Click" Tag="setting" Width="180" Height="40"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </Grid>
        <NavigationView
            x:Name="NavigationViewControl" PaneDisplayMode="LeftCompact" IsTitleBarAutoPaddingEnabled="False"
            Canvas.ZIndex="0"
            IsBackButtonVisible="Visible"
            AlwaysShowHeader="False"
            IsBackEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.Selected, Mode=OneWay}"
            IsSettingsVisible="True"
            ExpandedModeThresholdWidth="1280"
            DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
            Header="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Uid="Shell_Home" helpers:NavigationHelper.NavigateTo="BookingManagementSystem.ViewModels.HomeViewModel">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Home"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_RentalDetails" helpers:NavigationHelper.NavigateTo="BookingManagementSystem.ViewModels.MainViewModel">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Shop"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Map" helpers:NavigationHelper.NavigateTo="BookingManagementSystem.ViewModels.MapViewModel">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="World"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Host" helpers:NavigationHelper.NavigateTo="BookingManagementSystem.ViewModels.HostViewModel">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Street"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_FAQ" helpers:NavigationHelper.NavigateTo="BookingManagementSystem.ViewModels.FAQViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe7c3;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <NavigationView.PaneHeader>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Image Source="/Assets/Square44x44Logo.targetsize-48.png" Width="30" Height="30" Stretch="Fill"/>
                    <Image Source="/Assets/arrival-bio-resize-75.png" Height="30" Margin="6 0 0 0" Stretch="Fill"/>
                </StackPanel>
            </NavigationView.PaneHeader>

            <!--<NavigationView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock
                            Text="{Binding}"
                            Style="{ThemeResource TitleTextBlockStyle}" />
                    </Grid>
                </DataTemplate>
            </NavigationView.HeaderTemplate>-->
            <!--<i:Interaction.Behaviors>
                <behaviors:NavigationViewHeaderBehavior
                    DefaultHeader="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">
                    <behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock
                                    Text="{Binding}"
                                    Style="{ThemeResource TitleTextBlockStyle}" />
                            </Grid>
                        </DataTemplate>
                    </behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                </behaviors:NavigationViewHeaderBehavior>
            </i:Interaction.Behaviors>-->
            
            <!--<Grid Margin="{StaticResource NavigationViewPageContentMargin}">-->
            <Grid>
                <Frame x:Name="NavigationFrame" />
            </Grid>

            <NavigationView.AutoSuggestBox>
                <AutoSuggestBox PlaceholderText="Search"
                                TextChanged="MenuAutoSuggestBox_TextChanged"
                                QueryIcon="Find"
                                SuggestionChosen="MenuAutoSuggestBox_SuggestionChosen"
                                AutomationProperties.Name="Menu AutoSuggestBox" />

            </NavigationView.AutoSuggestBox>
            <NavigationView.PaneFooter>
                <StackPanel x:Name="FooterStackPanel" Orientation="Vertical" Visibility="Visible">
                    <NavigationViewItem Icon="Favorite" Content="Favorite" AutomationProperties.Name="Favorite" />
                </StackPanel>
            </NavigationView.PaneFooter>
        </NavigationView>
    </Grid>
</Page>
