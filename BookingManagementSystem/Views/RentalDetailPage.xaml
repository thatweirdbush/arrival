    <ScrollView ContentOrientation="None" ZoomMode="Disabled" IsTabStop="True"
                HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto"
                VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto"
                Margin="{StaticResource NavigationViewPageContentMargin}"
                Background="Transparent">
        <Grid x:Name="ContentArea">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid x:Name="itemHero">
                <FlipView x:Name="Gallery" Padding="0 0 0 24" Background="Transparent" ItemsSource="{x:Bind ViewModel.Item.ImagePaths, Mode=OneWay}">
                    <FlipView.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <ScrollView ContentOrientation="None" ZoomMode="Enabled" IsTabStop="True"
                                     VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                     HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Hidden"
                                     VerticalScrollMode="Auto" VerticalScrollBarVisibility="Hidden">
                                <Image AutomationProperties.Name="cliff" Stretch="Uniform" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center" Source="{x:Bind}"
                                    ToolTipService.ToolTip="You can scroll, pan and zoom an image in this panel. Try it out!"/>
                            </ScrollView>
                        </DataTemplate>
                    </FlipView.ItemTemplate>
                </FlipView>
                <PipsPager x:Name="FlipViewPipsPager" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                           NumberOfPages="3" PreviousButtonVisibility="Visible" NextButtonVisibility="Visible"
                           SelectedPageIndex="{x:Bind Path=Gallery.SelectedIndex, Mode=TwoWay}" />
            </Grid>

            <Grid Grid.Column="1" Grid.RowSpan="1" Background="{ThemeResource SystemControlBackgroundAltMediumBrush}" Padding="28" Margin="0 0 0 10">
                <StackPanel>
                    <TextBlock FontSize="38" FontWeight="Bold" Text="{x:Bind ViewModel.Item.Name, Mode=OneWay}" TextWrapping="Wrap"/>
                    <TextBlock FontSize="26" Margin="0 6 0 0" FontWeight="SemiBold" Text="{x:Bind ViewModel.Item.Location, Mode=OneWay}"/>
                    <TextBlock FontSize="32" Margin="0 26 0 0" FontWeight="ExtraBlack" FontFamily="Arial" Text="{x:Bind ViewModel.Item.PricePerNight, Converter={StaticResource NumberToCurencyConverter}, Mode=OneWay}"/>
                    <TextBlock FontSize="16" Margin="0 26 0 0" FontWeight="Normal" TextWrapping="Wrap">Lorem ipsum dolor sit amet, adipiscing elit. Duis eu sed eros facilisis. Fusce purus mana, iaculis et purus.</TextBlock>
                    <TextBlock FontSize="14" Margin="0 10 0 0" FontWeight="Normal" TextWrapping="Wrap">Proin sit amet libero sed lorem congue at dui. Libendum nec non metus.</TextBlock>
                    <TextBlock FontSize="14" Margin="0 10 0 0" FontWeight="Normal" TextWrapping="Wrap">* Phasellus in est euismod pharetra.</TextBlock>
                </StackPanel>
                <RepeatButton Grid.Row="1" x:Name="btnBuySmartphone" 
                      HorizontalAlignment="Center" VerticalAlignment="Bottom"
                      Background="{ThemeResource AcrylicBackgroundFillColorDefaultInverseBrush}"
                      Content="Next one"
                      Foreground="{ThemeResource SystemControlBackgroundAltHighBrush}"
                      FontWeight="SemiBold"
                      Padding="15" Width="150" 
                      Delay="500" Interval="100" 
                      ToolTipService.ToolTip="Get a new smartphone. Hold for Burst Mode">
                </RepeatButton>
            </Grid>

            <Grid Grid.Row="1" Margin="0 0 10 0" Padding="28 28 28 0" Background="{ThemeResource SystemControlBackgroundAltMediumBrush}">
                <StackPanel>
                    <TextBlock FontSize="26" FontWeight="Bold" Padding="0 0 0 6">What's new</TextBlock>
                    <InfoBar x:Name="infSmartphone" IsOpen="True" Severity="Warning" 
                      IsIconVisible="True" IsClosable="True" Title="News">
                        <InfoBar.ActionButton>
                            <Button Content="Next" ToolTipService.ToolTip="Get next smartphone"/>
                        </InfoBar.ActionButton>
                    </InfoBar>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1" Padding="28" Background="{ThemeResource SystemControlBackgroundAltMediumBrush}">
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
                    <TextBlock FontSize="26" FontWeight="Bold" Padding="0 0 0 10">Rating</TextBlock>
                    <RatingControl AutomationProperties.Name="Simple RatingControl" 
                       IsClearEnabled="True" IsReadOnly="False" 
                       Caption="312 ratings" PlaceholderValue="4"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollView>
</Page>
